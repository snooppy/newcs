<%@document = Document.new %>
<%= form_for @document, :html => { :multipart => true },:url => "/documents/create", :remote => true do |f| %>
  <div class="field">
  	<%= f.label :name%>
  	<%= f.text_field :name%>
    <br>
    <%= f.label :path %>
    <%= f.file_field :path %>
    <br>
    <%= hidden_field_tag "folder", @folder %>
   
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>