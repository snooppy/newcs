<%@user=User.new%>
<%= form_for(@user, :remote=>true, :method => :get , :url => { :action => "sign_in", :controller=>"users" }) do |f| %>


  <div class="field">
    <%= f.label :login %>
    <%= f.text_field :login %><br />
    <%= f.label :password %>
    <%= f.password_field :password %><br />
  </div>
  <div class="actions">
    <%= f.submit "sign_in"%>
    <%=link_to "sign out", {:controller=>"users",:action=>"sign_out",:id=>1},:remote=>true%>
  </div>
<% end %>
