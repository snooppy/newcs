<%= form_for(@user, :remote => true,:url => "/users/create") do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %><br>
    <%= f.label :password %><br />
    <%= f.text_field :password %><br>
    <%= f.label :role %><br />
    <div> <%=f.select :role,{"student"=>ROLE_STUDENT,"prepod"=>ROLE_PREPOD,}%></div>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %><br>
    <%= f.label :second_name %><br />
    <%= f.text_field :second_name %><br>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br>
    <%= f.label :email %><br />
    <%= f.text_field :email %><br>
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
