<div id="title">Пользователи, подавшие заявку на регистрацию</div>

<table class="table" cellspacing="0"> 
  <tbody>
    <tr>
      <th>Логин</th> 
      <th>Пароль</th> 
      <th>Имя</th> 
      <th>Фамилия</th> 
      <th>Отчество</th> 
      <th>E-mail</th> 
      <th>Пол</th> 
      <th>Роль</th> 
      <th></th> 
    </tr>
    <% class_even=0  %>
    <%@not_validated_users.each do |not_validated_user|%> 
      <%if class_even==1%>
        <%class_even=0%>
        <tr  class="even"> 
        <%else%>
          <%class_even=1%>
        <tr> 
        <%end%>
        <td><%= not_validated_user.login %></td> 
        <td><%= not_validated_user.password %></td> 
        <td><%= not_validated_user.first_name %></td> 
        <td><%= not_validated_user.second_name %></td> 
        <td><%= not_validated_user.last_name %></td> 
        <td><%= not_validated_user.email %></td> 
        <td><%= not_validated_user.sex %></td> 
        <td>
          <% if not_validated_user.role == ROLE_STUDENT %> 
            Студент
          <% else %>
            Преподаватель
          <% end %>
        </td> 
        <td><%= link_to image_tag("thumbs-up.png"), not_validated_user, :method => :delete %>
      </tr> 
    <% end %>
  </tbody>
</table>