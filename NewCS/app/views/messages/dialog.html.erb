        <tr>
          <td id="im_user_holder">
            <%=  image_tag "face.png" ,:width=>"60px", :height=>"60px",:class=> "rounded"%>
          </td>
          <td class="dialog_write_form">
            <div>
              <textarea name="dialog_write_text" class="dialog_my_text"></textarea>
