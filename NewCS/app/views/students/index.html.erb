<div id="title">Студенты</div>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td>    
        <%if student.photo?%>
          <%=image_tag (student.photo :class => "rounded", :width=>"100px", :hight=>"100px")%>
        <%else%>
          <%=image_tag("no_avatar.jpg", :class => "rounded", :width=>"100px", :hight=>"100px")%>
        <%end%>
      </td>
      <td><%= student.second_name %>&nbsp;<%= student.first_name %>&nbsp;<%= student.last_name %></td>    
    </tr>
  <% end %>
</table>

