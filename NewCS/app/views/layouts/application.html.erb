<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag 'jquery', 'application' %>
<%#=# javascript_include_tag 'jquery-1.6.2.min', 'jquery-ui-1.8.16.custom.min' %>
    <%= csrf_meta_tags %>
    <%if !session[:user].nil?%>
      <script type="text/javascript" >
        $(document).ready(
        function(){
          event_scan();
          setInterval(function (){
            event_scan();
          }, 1000000);
        
          //$("#new_message").draggable();
        });
      </script>
    <%end%>
  </head>
  <body class="body">
    <!--%=render :partial=>"messages/form"%-->

    <div id ="notification_area">
    </div>
    <div id ="popup_message">
    </div>

    <%= render :partial=>"layouts/header" %>
    <div id="wrapper">
      <div id="content" class="box_round">
        <div id="primary_content">
          <%= yield %>
        </div>

        <div id="right_panel">
          <%= render 'layouts/right_menu' %>
        </div>
      </div>

      <%= render 'layouts/footer' %>
    </div>

  </body>
</html>
