<%if @pubs.count>0 %>
  <div id="news_div">
    <h4 style="margin-left:10px; margin-top:10px; color:#C2D7EF;">ПОСЛЕДНИЕ НОВОСТИ</h4>

    <a href="/publication/<%=@pubs[0].id%>">
      <div id="first_news_div">
        <p class="img_prolog">
          <%if @pubs[0].photo?%>
            <%=image_tag @pubs[0].photo%>
          <%end%>
          <b class="title">
            > <%=@pubs[0].title%>
          </b><br />
          <%=@pubs[0].prolog.slice(0..100)%>...
        </p>
      </div>
    </a>     

    <%if @pubs.count>1%>
      <a href="/publication/<%=@pubs[1].id%>">
        <div id="second_news_div">
          <p class="title">
            > <%=@pubs[1].title%>
          </p>
        </div>
      </a>
    <%end%>

    <%if @pubs.count>2%>
      <a href="/publication/<%=@pubs[2].id%>">
        <div id="third_news_div">
          <p class="title">
            > <%=@pubs[2].title%>
          </p>
        </div>
      </a>
    <%end%>

    <div style="clear: both"></div>

    <div>
      <a href="publications/" style="float: right; position: relative; top: 0px; right: 0px; color:#C2D7EF;"> <b>Все новости</b></a>
    </div>  
  </div>
<%end%>
