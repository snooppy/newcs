<h1>Listing publications</h1>


<div id="publications_table">
  <% @publications.each do |publication| %>
    <div class="pub_div">
      <%=image_tag publication.photo%>
      <div class="user">
        <%  @user = User.find(publication.user_id) %>
        <%=image_tag @user.photo, :class => "photo" %>
        <%=@user.login%>
      </div>
      <div class="title"><%=publication.title%></div>
      <div class="prolog"><%=publication.prolog%></div>

    </div>
  <% end %>
</div> 
<br />

<%= link_to 'New Publication', new_publication_path %>
